{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
      "target": "es2020",
      "strict": true,
      "preserveConstEnums": true,
      "noEmit": true,
      "sourceMap": false,
      "module":"es2015",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@homethrive-challenge/api/schemas": ["src/db/schemas"],
        "@homethrive-challenge/api/trpc": ["src/trpc"],
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"],
    "ts-node": {
      "require": [
        "tsconfig-paths/register"
      ]
    }
  }